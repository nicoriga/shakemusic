<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list"
        android:layout_width="550dp"
        android:layout_height="wrap_content" >

    </ListView>

    <TextView
        android:id="@+id/UI5textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5textView1"
        android:layout_below="@+id/UI5textView1"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="24dp"
        android:text="Data creazione:" />

    <TextView
        android:id="@+id/UI5textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/UI5textView2"
        android:layout_below="@+id/UI5textView3"
        android:layout_marginTop="24dp"
        android:text="Selezionia Assi:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/UI5checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5textView4"
        android:layout_below="@+id/UI5textView4"
        android:text="X" />

    <CheckBox
        android:id="@+id/UI5checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI5checkBox1"
        android:layout_alignBottom="@+id/UI5checkBox1"
        android:layout_marginLeft="51dp"
        android:layout_toRightOf="@+id/UI5textView4"
        android:text="Z" />

    <CheckBox
        android:id="@+id/UI5checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI5checkBox3"
        android:layout_alignBottom="@+id/UI5checkBox3"
        android:layout_toLeftOf="@+id/UI5checkBox3"
        android:text="Y" />

    <TextView
        android:id="@+id/UI5textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5textView1"
        android:layout_below="@+id/UI5checkBox1"
        android:layout_marginTop="41dp"
        android:text="Upsampling:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/UI5spinner1"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UI5textView5"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/UI5checkBox1"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:paddingLeft="50dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI5textView1"
        android:layout_alignBottom="@+id/UI5textView1"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/UI5textView2"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/UI5textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5textView2"
        android:layout_below="@+id/UI5textView2"
        android:layout_marginTop="22dp"
        android:text="Data modifica:" />

    <TextView
        android:id="@+id/UI5textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@+id/list"
        android:text="Titolo Sessione"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@+id/UI5checkBox3"
        android:text="Play" />

    <Button
        android:id="@+id/UI3button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/editText1"
        android:layout_marginRight="22dp"
        android:text="Esporta" />

</RelativeLayout>