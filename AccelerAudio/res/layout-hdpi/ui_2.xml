<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#929395"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/UI2_BT_listsession"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lista Sessioni" />
    </LinearLayout>


        <TextView
            android:id="@+id/UI2_TV_sessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nome Sessione"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/UI2_ET_sessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10" />

        <TableRow
            android:id="@+id/UI2_tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/UI2_TV_axes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Seleziona Assi:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/UI2_CB_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="X" />

            <CheckBox
                android:id="@+id/UI2_CB_Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Y" />

            <CheckBox
                android:id="@+id/UI2_CB_Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Z" />

        </TableRow>

        <TextView
            android:id="@+id/UI2_TV_upsampling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Upsampling"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/UI2_SP_upsampling"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/UI2_TV_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Data Creazione:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/UI2_TV_ModifiedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Data Modifica:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TableRow
            android:id="@+id/UI2_TR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/UI2_button_play"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:text="Riproduci" />

            <Button
                android:id="@+id/UI2_button_export"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:text="Esporta" />

        </TableRow>

    <ImageView
        android:id="@+id/UI2_IV_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher" />

</LinearLayout>