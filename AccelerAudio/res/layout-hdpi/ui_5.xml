<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    tools:context="com.acceleraudio.activity.PreferencesActivity" >

    <CheckBox
        android:id="@+id/UI5_CB_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5_TV_axes"
        android:layout_below="@+id/UI5_TV_axes"
        android:text="@string/x" />

    <Spinner
        android:id="@+id/UI5_SP_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5_TV_frequency"
        android:layout_below="@+id/UI5_TV_frequency" />

    <Spinner
        android:id="@+id/UI5_SP_upsampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/UI5_TV_upsampling" />

    <TextView
        android:id="@+id/UI5_TV_recordDefaultOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/standard_record_option"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/UI5_TV_axes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/UI5_TV_recordDefaultOption"
        android:layout_marginLeft="20dp"
        android:text="@string/axes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/UI5_CB_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UI5_TV_duration"
        android:layout_alignRight="@+id/UI5_TV_upsampling"
        android:text="@string/y" />

    <CheckBox
        android:id="@+id/UI5_CB_Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UI5_TV_duration"
        android:layout_toRightOf="@+id/UI5_CB_Y"
        android:text="@string/z" />
    
    <Button
        android:id="@+id/UI5_BT_minuteMinus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/UI5_ET_minute"
        android:layout_below="@+id/UI5_ET_minute"
        android:text="@string/minus" />

    <Button
        android:id="@+id/UI5_BT_secondMinus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/UI5_ET_second"
        android:layout_below="@+id/UI5_ET_second"
        android:text="@string/minus" />

    <Button
        android:id="@+id/UI5_BT_minutePlus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/UI5_TV_duration"
        android:layout_below="@+id/UI5_TV_duration"
        android:text="@string/plus" />

    <EditText
        android:id="@+id/UI5_ET_minute"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/UI5_BT_minutePlus"
        android:layout_alignRight="@+id/UI5_BT_minutePlus"
        android:layout_below="@+id/UI5_BT_minutePlus"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/UI5_ET_second"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/UI5_BT_minuteMinus"
        android:layout_alignLeft="@+id/UI5_BT_secondPlus"
        android:layout_alignRight="@+id/UI5_BT_secondPlus"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/UI5_TV_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5_CB_X"
        android:layout_below="@+id/UI5_CB_X"
        android:text="@string/duration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/UI5_TV_upsampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5_SP_frequency"
        android:layout_below="@+id/UI5_SP_frequency"
        android:text="@string/upsampling"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/UI5_TV_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI5_BT_minuteMinus"
        android:layout_below="@+id/UI5_BT_minuteMinus"
        android:text="@string/frequency"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/UI5_BT_secondPlus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/UI5_ET_second"
        android:layout_toRightOf="@+id/UI5_BT_minutePlus"
        android:text="@string/plus" />

</RelativeLayout>