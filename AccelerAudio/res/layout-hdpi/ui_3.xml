<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/UI3button2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UI3button1"
        android:layout_alignRight="@+id/UI3textView1"
        android:text="Stop" />

    <ProgressBar
        android:id="@+id/UI3verticalBarY"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI3verticalBarZ"
        android:layout_below="@+id/UI3verticalBarZ"
        android:minHeight="40dip"
        android:minWidth="200dip"
        android:progress="80" />

    <ProgressBar
        android:id="@+id/UI3verticalBarX"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UI3verticalBarY"
        android:layout_below="@+id/UI3verticalBarY"
        android:minHeight="40dip"
        android:minWidth="200dip"
        android:progress="20" />

    <EditText
        android:id="@+id/UI3editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/UI3textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/UI3textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI3editText1"
        android:layout_alignBottom="@+id/UI3editText1"
        android:layout_alignParentLeft="true"
        android:text="Nome Sessione"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/UI3verticalBarZ"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UI3textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:minHeight="40dip"
        android:minWidth="200dip"
        android:progress="40" />

    <Button
        android:id="@+id/UI3button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="Record" />

    <Button
        android:id="@+id/UI3button3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI3button2"
        android:layout_alignBottom="@+id/UI3button2"
        android:layout_alignRight="@+id/UI3verticalBarX"
        android:text="Pause" />

    <TextView
        android:id="@+id/UI3textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UI3textView3"
        android:layout_alignBottom="@+id/UI3textView3"
        android:layout_toLeftOf="@+id/UI3button3"
        android:text="Campioni Registrati:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/UI3textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/UI3editText1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="23dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioButton
        android:id="@+id/UI3_radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Portrait" />

    <RadioButton
        android:id="@+id/UI3_radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/UI3_radioButton1"
        android:text="Landscape" />

    <TextView
        android:id="@+id/UI3_timeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UI3button2"
        android:layout_marginBottom="23dp"
        android:layout_toRightOf="@+id/UI3button2"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>