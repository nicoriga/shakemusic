<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/UI2_tableRow1"
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:gravity="center_vertical">
       	
        <TextView
	        android:id="@+id/UI3textView1"
	        android:layout_marginLeft="20dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="@string/session_name"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/UI3_ET_SessionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true" >

            <requestFocus />
        </EditText>
            
   	</TableRow>
    
   	<TableRow
        android:id="@+id/UI2_tableRow2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        
   	    <LinearLayout
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:layout_marginLeft="20dp"
   	        android:gravity="center_vertical"
   	        android:orientation="vertical"
   	        android:showDividers="none" >
			
   	        <LinearLayout
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:gravity="fill"
   	            android:orientation="horizontal"
   	            android:showDividers="none" >
	            
		        <TextView
		            android:id="@+id/UI3textView2" 
			        android:layout_height="wrap_content" 
			        android:layout_width="wrap_content"
			        android:text="@string/recorded_samples"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <TextView
		            android:id="@+id/UI3_TV_RecordedSamples"
			        android:layout_height="wrap_content" 
			        android:layout_width="wrap_content"
			        android:text="@string/recorded_samples"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		   	</LinearLayout>   
		   	
   	        <LinearLayout
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:layout_marginTop="10dp"
   	            android:gravity="fill"
   	            android:orientation="horizontal"
   	            android:showDividers="none" >
		        
		        <TextView
		            android:id="@+id/UI3textView4" 
			        android:layout_height="wrap_content" 
			        android:layout_width="wrap_content"
			        android:text="@string/remaining_time"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <TextView
		            android:id="@+id/UI3_TV_timerRemaning"
			        android:layout_height="wrap_content" 
			        android:layout_width="wrap_content"
			        android:text="@string/time"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
        
			</LinearLayout>
			
        </LinearLayout>
        
        
    </TableRow>   
    
   	<TableRow
   	    android:id="@+id/tableRow4"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content">
   	            
   	    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="none" >
        
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_Z"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="40" />  
	            
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_Y"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="20" />   
	            
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_X"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="80" /> 
   	    
   	    </LinearLayout>
   	    
   	    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="none"
            android:gravity="center">
            
            	<LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:showDividers="none"
		            android:gravity="center">
			   	       	    
		   	        <Button
				        android:id="@+id/UI3_BT_stop"
				        style="?android:attr/buttonStyleSmall"
				        android:layout_height="wrap_content"
				        android:layout_width="70dp"
				        android:text="@string/stop" />
		   	    	
		   	    	<Button
				        android:id="@+id/UI3_BT_pause"
				        style="?android:attr/buttonStyleSmall"
				        android:layout_height="wrap_content"
				        android:layout_width="70dp"
				        android:text="@string/pause" />
			   	    
			   	</LinearLayout>
		   	    
            	<LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:showDividers="none"
		            android:layout_marginTop="10dp"
		            android:gravity="center">
			   	    
            	    <Button
				       	android:id="@+id/UI3_BT_record"
				        style="?android:attr/buttonStyleSmall"
				        android:layout_height="wrap_content"
				        android:layout_width="90dp"
				        android:text="@string/record" />

			 	
			 	</LinearLayout>
			   	    
   	        
   	    </LinearLayout>

      	    
   	</TableRow>	

</LinearLayout>