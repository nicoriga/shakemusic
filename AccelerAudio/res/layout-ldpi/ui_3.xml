<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/UI2_tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical">
       	
        <TextView
	        android:id="@+id/UI3textView1"
	        android:layout_marginLeft="20dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="Nome Sessione"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/UI3_ET_SessionName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10" >

            <requestFocus />
        </EditText>
            
   	</TableRow>
    
   	<TableRow
        android:id="@+id/UI2_tableRow2"
		android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/UI3textView2" 
            android:layout_marginLeft="20dp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content"
	        android:text="Campioni Registrati:"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/UI3_TV_RecordedSamples"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content" 
	        android:text="Numero"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        
    </TableRow>   
    
   	<TableRow
        android:id="@+id/UI2_tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/UI3textView4" 
            android:layout_marginLeft="20dp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content"
	        android:text="Tempo Rimanente:"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/UI3_TV_timerRemaning"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content"
	        android:text="Tempo"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </TableRow>   
    
   	<TableRow
   	    android:id="@+id/tableRow4"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="10dp">
   	            
   	    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="none" >
        
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_Z"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="40" />  
	            
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_Y"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="20" />   
	            
	   	    <ProgressBar
		        android:id="@+id/UI3_PB_X"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="80" /> 
   	    
   	    </LinearLayout>
   	    
   	</TableRow>
   	
   	<TableRow
   	    android:id="@+id/tableRow5"
   	    android:layout_width="match_parent"
   	    android:layout_height="80dp"
   	    android:gravity="center" 
   	    android:layout_marginTop="10dp">
   	    
   	    <Button
	        android:id="@+id/UI3_BT_stop"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_height="wrap_content"
	        android:layout_width="70dp"
	        android:text="Stop" />
	   	    
   	    <Button
	       	android:id="@+id/UI3_BT_record"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_height="wrap_content"
	        android:layout_width="80dp"
	        android:text="Record" />
	   	    
  	    <Button
	        android:id="@+id/UI3_BT_pause"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_height="wrap_content"
	        android:layout_width="70dp"
	        android:text="Pause" />
   	    
   	</TableRow>

</LinearLayout>