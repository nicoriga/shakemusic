<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#929395"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/UI2_B_listsession"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lista Sessioni" />
    </LinearLayout>

    <TableRow
        android:id="@+id/UI2_tableRow0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/UI2_textView_titolo_sessione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nome Sessione"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/UI2_editText_titolo_sessione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10" />

        <ImageView
	        android:id="@+id/UI2_imageView_thumbnail"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/ic_launcher" />

    </TableRow>

        <TableRow
            android:id="@+id/UI2_tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/UI2_textView_assi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Seleziona Assi:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/UI2_checkBox_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="X" />

            <CheckBox
                android:id="@+id/UI2_checkBox_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Y" />

            <CheckBox
                android:id="@+id/UI2_checkBox_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Z" />

        </TableRow>

        <TableRow
            android:id="@+id/UI2_tableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/UI2_textView_upsampling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Upsampling"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/UI2_spinner_upsampling"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" />

        </TableRow>

        <TableRow
            android:id="@+id/UI2_tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/UI2_textView_data_creazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Data Creazione:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/UI2_textView_data_Modifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Data Modifica:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/UI2_button_play"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:text="Riproduci" />

            <Button
                android:id="@+id/UI2_button_export"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Esporta" />

        </TableRow>


</LinearLayout>