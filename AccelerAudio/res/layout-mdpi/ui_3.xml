<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/UI3_TR1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05" >

        <TextView
            android:id="@+id/UI3_TV_SessionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/UI3_ET_SessionName"
            android:layout_alignBottom="@+id/UI3_ET_SessionName"
            android:layout_alignParentLeft="true"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:text="Nome Sessione"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/UI3_ET_SessionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_toRightOf="@+id/UI3_TV_SessionName"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/UI3_TR2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.04" >

        <TextView
            android:id="@+id/UI3_TV_RecordedSamples"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/UI3_TV_MediumText"
            android:layout_alignBottom="@+id/UI3_TV_MediumText"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/UI3_BT_pause"
            android:text="Campioni Registrati:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/UI3_TV_MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/UI3_ET_SessionName"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

    </TableRow>

    <TableRow
        android:id="@+id/UI3_TR3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="none" >

            <ProgressBar
                android:id="@+id/UI3_VB_Z"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UI3_TV_RecordedSamples"
                android:layout_centerHorizontal="true"
                android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="40" />

            <ProgressBar
                android:id="@+id/UI3_VB_Y"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/UI3_VB_Z"
                android:layout_below="@+id/UI3_VB_Z"
                android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="80" />

            <ProgressBar
                android:id="@+id/UI3_VB_X"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/UI3_VB_Y"
                android:layout_below="@+id/UI3_VB_Y"
                android:minHeight="40dip"
                android:minWidth="200dip"
                android:progress="20" />
        </LinearLayout>

        <Button
            android:id="@+id/UI3_BT_save"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Salva" />

    </TableRow>

    <TextView
        android:id="@+id/UI3_TV_timerRemaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableRow
        android:id="@+id/UI3_TR4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0.02"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/UI3_BT_stop"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_above="@+id/UI3_BT_record"
            android:layout_alignRight="@+id/UI3_TV_SessionName"
            android:text="Stop" />

        <Button
            android:id="@+id/UI3_BT_record"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:text="Record" />

        <Button
            android:id="@+id/UI3_BT_pause"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignBaseline="@+id/UI3_BT_stop"
            android:layout_alignBottom="@+id/UI3_BT_stop"
            android:layout_alignRight="@+id/UI3_VB_X"
            android:text="Pause" />

    </TableRow>

    <TableRow
        android:id="@+id/UI3_TR5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="0.29" >
        
        <RadioGroup
        android:id="@+id/UI3_orientation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/UI3_RB_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill_horizontal"
            android:layout_marginLeft="180dp"
            android:checked="true"
            android:text="Landscape" />

        <RadioButton
            android:id="@+id/UI3_RB_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portrait" />
		</RadioGroup>

    </TableRow>

</LinearLayout>