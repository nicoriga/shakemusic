<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#929395"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/UI2_BT_listsession"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/list_session" />
    </LinearLayout>

        <TextView
            android:id="@+id/UI2_TV_sessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/session_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/UI2_ET_sessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"
            android:ellipsize="end" />

        <TableRow
            android:id="@+id/UI2_tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/UI2_TV_axes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/axes_select"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/UI2_CB_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/x" />

            <CheckBox
                android:id="@+id/UI2_CB_Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/y" />

            <CheckBox
                android:id="@+id/UI2_CB_Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/z" />

        </TableRow>

        <TextView
            android:id="@+id/UI2_TV_upsampling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/upsampling"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/UI2_SP_upsampling"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/UI2_TV_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/creation_date"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/UI2_TV_ModifiedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/modified_date"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TableRow
            android:id="@+id/UI2_TR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

			    <ImageView
			        android:id="@+id/UI2_IV_thumbnail"
			        android:layout_width="200dp"
			        android:layout_height="200dp"
			        android:layout_marginTop="10dp"
			        android:contentDescription="@string/thumbnail"
			        android:src="@drawable/ic_launcher"
			        android:layout_marginLeft="20dp" />
			    
		</TableRow>
    
    <TableRow
            android:id="@+id/UI2_TR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center" >

            <Button
                android:id="@+id/UI2_button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="@string/play"
                android:drawableRight="@drawable/play_icon"
                android:drawablePadding="4dp" />

            <Button
                android:id="@+id/UI2_button_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/export"
                android:drawableRight="@drawable/export_icon"
                android:drawablePadding="4dp"  />

        </TableRow>

</LinearLayout>